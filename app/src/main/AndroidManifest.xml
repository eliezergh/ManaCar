<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eliezergh.manacar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mc_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mc_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ManaCar">
        <activity
            android:name=".addActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eliezergh.manacar.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ManaCar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>